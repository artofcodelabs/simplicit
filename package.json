{
  "name": "simplicit",
  "version": "0.4.0",
  "description": "A truly modest yet powerful JavaScript framework.",
  "type": "module",
  "main": "dist/simplicit.mjs",
  "module": "dist/simplicit.mjs",
  "exports": {
    ".": "./dist/simplicit.mjs"
  },
  "scripts": {
    "prepare": "husky",
    "format": "prettier --write .",
    "lint": "eslint . --ext .js --fix",
    "lint-staged": "lint-staged",
    "build": "webpack --mode=production --node-env=production -c webpack.config.js --progress",
    "start": "node dev/server.js",
    "test": "npm run test:jest && npm run test:e2e",
    "test:jest": "NODE_OPTIONS=--experimental-vm-modules jest --runInBand",
    "test:e2e": "playwright test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/artofcodelabs/simplicit.git"
  },
  "keywords": [
    "simplicit",
    "framework"
  ],
  "author": "Zbigniew Humeniuk <hello@artofcode.co>",
  "license": "MIT",
  "homepage": "https://github.com/artofcodelabs/simplicit",
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@playwright/test": "^1.55.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "express": "^5.1.0",
    "globals": "^15.15.0",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "webpack": "^5.101.2",
    "webpack-cli": "^6.0.1",
    "webpack-dev-middleware": "^7.4.2"
  },
  "browserslist": [
    "defaults"
  ]
}
